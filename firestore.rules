
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUser(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // Agency specific helper functions
    function isAgencyOwner(agencyId) {
      // Use custom claim for efficiency. Avoids a get() call.
      return request.auth.token.isAgencyOwner == true && request.auth.token.primaryAgencyId == agencyId;
    }

    function isAgencyAdmin(agencyId) {
      // Use custom claims for efficiency.
      return request.auth.token.primaryAgencyId == agencyId && (request.auth.token.isAgencyOwner == true || request.auth.token.isAgencyAdmin == true);
    }
    
    function isTeamMember(agencyId) {
      // Efficiently check if user belongs to the agency via custom claim
       return request.auth.token.primaryAgencyId == agencyId;
    }

    function userOwnsContract(contractId) {
      let contract = get(/databases/$(database)/documents/contracts/$(contractId)).data;
      // Direct user owns the contract OR user is an admin of the agency that owns the contract
      return isUser(contract.userId) || (contract.ownerType == 'agency' && isTeamMember(contract.ownerId));
    }

    // Rules for the users collection
    match /users/{userId} {
      allow read, update: if isUser(userId);
      allow create: if isSignedIn();
    }

    // Rules for the contracts collection
    match /contracts/{contractId} {
      allow read: if isSignedIn() && 
                    (
                      isUser(resource.data.userId) || // User owns the contract directly
                      (resource.data.ownerType == 'agency' && isTeamMember(resource.data.ownerId)) // User is part of the agency that owns it
                    );
      allow update, delete: if isSignedIn() && userOwnsContract(contractId);
      allow create: if isSignedIn() && 
        (
          request.resource.data.userId == request.auth.uid || // Talent creating for themselves
          (request.resource.data.ownerType == 'agency' && isAgencyAdmin(request.resource.data.ownerId)) // Agency admin/owner creating for talent
        );
    }
    
    match /sharedContractVersions/{sharedVersionId} {
      allow read: if resource.data.status == 'active' || (isSignedIn() && request.auth.uid == resource.data.userId);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid && userOwnsContract(request.resource.data.originalContractId);
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    match /contractComments/{commentId} {
      allow create: if request.resource.data.sharedVersionId != null &&
                       exists(/databases/$(database)/documents/sharedContractVersions/$(request.resource.data.sharedVersionId)) &&
                       get(/databases/$(database)/documents/sharedContractVersions/$(request.resource.data.sharedVersionId)).data.status == 'active' &&
                       request.resource.data.creatorId == get(/databases/$(database)/documents/sharedContractVersions/$(request.resource.data.sharedVersionId)).data.userId &&
                       request.resource.data.commenterName is string && request.resource.data.commenterName.size() > 0 && request.resource.data.commenterName.size() < 100 &&
                       request.resource.data.commentText is string && request.resource.data.commentText.size() > 0 && request.resource.data.commentText.size() < 2000 &&
                       request.resource.data.commentedAt == request.time &&
                       (request.resource.data.commenterEmail == null || (request.resource.data.commenterEmail is string && request.resource.data.commenterEmail.size() < 100)) &&
                       request.resource.data.originalContractId == get(/databases/$(database)/documents/sharedContractVersions/$(request.resource.data.sharedVersionId)).data.originalContractId;
      
      allow read: if get(/databases/$(database)/documents/sharedContractVersions/$(resource.data.sharedVersionId)).data.status == 'active' ||
                     (isSignedIn() && request.auth.uid == resource.data.creatorId);

      allow update: if isSignedIn() && request.auth.uid == resource.data.creatorId &&
                       request.resource.data.creatorId == resource.data.creatorId && 
                       request.resource.data.originalContractId == resource.data.originalContractId && 
                       request.resource.data.sharedVersionId == resource.data.sharedVersionId && 
                       (request.resource.data.replies == null || request.resource.data.replies is list);
                       
      allow delete: if isSignedIn() && request.auth.uid == resource.data.creatorId;
    }
    
    match /redlineProposals/{proposalId} {
      allow create: if request.resource.data.sharedVersionId != null &&
                       exists(/databases/$(database)/documents/sharedContractVersions/$(request.resource.data.sharedVersionId)) &&
                       get(/databases/$(database)/documents/sharedContractVersions/$(request.resource.data.sharedVersionId)).data.status == 'active' &&
                       request.resource.data.proposerName is string && request.resource.data.proposerName.size() > 0 &&
                       request.resource.data.originalText is string && request.resource.data.originalText.size() > 0 &&
                       request.resource.data.proposedText is string && request.resource.data.proposedText.size() > 0 &&
                       request.resource.data.creatorId == get(/databases/$(database)/documents/sharedContractVersions/$(request.resource.data.sharedVersionId)).data.userId &&
                       request.resource.data.status == 'proposed' &&
                       request.resource.data.proposedAt == request.time;
      
      allow read: if get(/databases/$(database)/documents/sharedContractVersions/$(resource.data.sharedVersionId)).data.status == 'active' ||
                     (isSignedIn() && request.auth.uid == resource.data.creatorId);

      allow update: if isSignedIn() && request.auth.uid == resource.data.creatorId &&
                       request.resource.data.originalText == resource.data.originalText &&
                       request.resource.data.proposedText == resource.data.proposedText &&
                       request.resource.data.proposerName == resource.data.proposerName &&
                       request.resource.data.status in ['accepted', 'rejected'];

      allow delete: if isSignedIn() && request.auth.uid == resource.data.creatorId;
    }

    match /paymentIntents/{intentId} {
      allow read: if isSignedIn() && (isUser(resource.data.userId) || isUser(resource.data.creatorId));
      allow create, update, delete: if false; // Server-side only
    }
    
    match /payments/{paymentId} {
       allow read: if isSignedIn() && (isUser(resource.data.userId) || isUser(resource.data.creatorId));
       allow create, update, delete: if false; // Server-side only
    }
    
    match /emailLogs/{logId} {
      allow read: if isSignedIn() && userOwnsContract(resource.data.contractId);
      allow write: if false; // Server-side only
    }
    
    match /users/{userId}/bankAccounts/{accountId} {
      allow read, write: if isUser(userId);
    }
    
    match /users/{userId}/bankTransactions/{transactionId} {
      allow read, write: if isUser(userId);
    }
    
    match /receipts/{receiptId} {
      allow read, update, delete: if isSignedIn() && isUser(resource.data.userId);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    // Rules for agencies
    match /agencies/{agencyId} {
      allow read: if isSignedIn(); // Allow any authenticated user to read basic agency details
      allow create: if isSignedIn(); // onCall function will handle owner logic
      allow update: if isSignedIn() && isAgencyAdmin(agencyId); // Owner or admin can manage
      allow delete: if isSignedIn() && isAgencyOwner(agencyId); // Only owner can delete
    }
    
    match /internalPayouts/{payoutId} {
      allow read: if isSignedIn() && (isAgencyAdmin(resource.data.agencyId) || isUser(resource.data.talentId));
      allow create: if isSignedIn() && isAgencyAdmin(request.resource.data.agencyId);
      allow update, delete: if false; // Payouts are immutable for now
    }
    
     match /agencyInvitations/{invitationId} {
        allow read: if isSignedIn();
        allow write: if false; // Only backend can write
     }
  }
}
