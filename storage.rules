
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads of all files by default.
    // In a production app, you might lock this down further.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to write to their own user-specific directories
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /contracts/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /receipts/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /avatars/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
    