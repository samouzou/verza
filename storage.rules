rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // AVATARS: Users can read anyone's avatar, but only write their own.
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Avatars are often public
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // CONTRACTS: Users can only read and write their own contract files.
    match /contracts/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // RECEIPTS: Users can only read and write their own receipt files.
    match /receipts/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny all other paths if not explicitly matched above
    // match /{allPaths=**} {
    //  allow read, write: if false;
    // }
  }
}
